{% extends 'base.html.twig' %}

{% block body %}
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path('inicio') }}">CineWorld</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav">
          <li{% if app.request.attributes.get('_route') == 'inicio' %} class="active"{% endif %}><a href="{{ path('inicio') }}">Inicio</a></li>
          <li{% if app.request.attributes.get('_route') == 'cinemostrar' %} class="active"{% endif %}><a href="{{ path('cinemostrar') }}">Cine</a></li>
          <li{% if app.request.attributes.get('_route') == 'peliculastodas' %} class="active"{% endif %}><a href="{{ path('peliculastodas') }}">Peliculas</a></li>
          <li{% if app.request.attributes.get('_route') == 'comentarios' %} class="active"{% endif %}><a href="{{ path('comentarios') }}">Comentarios</a></li>
          <li{% if app.request.attributes.get('_route') == 'trailers' %} class="active"{% endif %}><a href="{{ path('trailers') }}">Trailers</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            {% if app.user %}
              <p class="navbar-text">Logeado como: {{ app.user }}</p>
            {% endif %}
            {% if app.user %}
              <li><a href="{{ path('usuario_salir') }}"><i class="fa fa-sign-out"></i>SALIR</a></li>
            {% else %}
              <li><a href="{{ path('pagina_logeo') }}"><i class="fa fa-sign-in"></i>ENTRAR</a></li>
            {% endif %}
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container">
      {% block content %}{% endblock %}
  </div>
{% endblock %}